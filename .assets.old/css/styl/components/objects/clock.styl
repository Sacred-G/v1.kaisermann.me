$clock-size = 150px
$clock-border = 10px
$ponteiro-position = ($clock-size - $clock-border * 2) / 2
$clock-speed = 60

.clock
	position absolute
	top 40px
	absolute-horizontal-center()
	width $clock-size
	height $clock-size
	z-index 900

.clock__container
	position relative
	width $clock-size
	height $clock-size
	background-color $branco
	border-radius 50%
	border $clock-border solid $preto
	transition transform .3s ease-in-out
	cursor pointer
	
	&:hover
		transform scale(1.03)
	
	&::before
		content ''
		display block
		position absolute
		top 50%
		left 50%
		transform translate3d(-50%,-50%,0)
		width 10px
		height 10px
		background-color $preto
		border-radius 50%
		z-index 804
		
.clock__markers
	&::before
	&::after
		content ''
		display block
		position absolute
		background-color $cinza
		
	&::before
		width 5px
		height 10px
		top 0
		left 50%
		transform translateX(-50%)
		box-shadow $cinza 0px 120px 0
		
	&::after
		width 10px
		height 5px
		left 0
		top 50%
		transform translateY(-50%)
		box-shadow $cinza 120px 0px 0
		
.clock--shaking
	animation smallrotate .3s ease-in-out infinite

.clock__second
.clock__minute
.clock__hour
	width 100%
	height 100%
	position absolute
	content ''
	display block
	position absolute
	background-color $preto
	absolute-vertical-center()
	left $ponteiro-position
	transform-origin 0 50%

.clock__second
	width 50px
	height 1px
	background-color $vermelho
	z-index 803

.clock__minute
	width 45px
	height 2px
	z-index 802

.clock__hour
	width 30px
	height 4px
	z-index 801