.lamp
	position absolute 
	bottom 0
	left $position-lamp
	width 230px			
	z-index 900
	
.lamp--blink
.lamp:hover
	.lamp__top-light
		visibility visible
		animation blink-lamp-light .6s ease
		
	.lamp__top-lamp
		transition none
		animation blink-lamp .6s ease

.lamp__base
	overflow hidden
	text-align center
	width 100px
	position absolute
	bottom 0
	left 0
	z-index 901
	
	&::after
	&::before
		 content ''
		 display inline-block
		 vertical-align bottom
		 
	&::before
		width 80%
		height 80px
		border-radius 50%
		background-color $vermelho-base-luminaria
		margin-bottom -40px
		 
	&::after
		width 100%
		height 20px
		border-top-left-radius 8px
		border-top-right-radius 8px
		background-color $vermelho-escuro-luminaria

.lamp__hinge
	 &::before
	 &::after
		 content ''
		 display block
		 position absolute
		 width 30px
		 height 30px
		 border-radius 50%
		 background-color #fff
		 border 6px solid $vermelho-base-luminaria
		 z-index 901
			
	 &::before
		 bottom 174px
		 left -12px

	 &::after
		bottom 320px
		left 110px
			
.lamp__pole
		&::before
		&::after
			content ''
			display block
			position absolute
			height 10px
			background-color $preto
			bottom 180px
			z-index 900
			transform-origin 0 50%
			
		&::after
			width 200px
			transform rotateZ(-50deg)
			
		&::before
			left 3px
			width 140px
			transform rotateZ(70deg)
			
		
.lamp__top
	position absolute
	width 0
	height 0
	border-style solid
	border-width 80px 80px 0 0
	border-color $vermelho-escuro-luminaria transparent transparent transparent
	bottom 273px
	left 150px
	z-index 904
	
	&::before
		content ''
		display block
		position absolute
		left -30px
		bottom 50px
		width 60px
		height 60px
		background-color $vermelho-base-luminaria
		border-radius 4px
		z-index 905
		transform rotateZ(45deg)


	 
.lamp__top-lamp
	position absolute
	width 30px
	height 30px
	border-radius 50%
	bottom 296px
	left 176px
	z-index 903
	transition background-color .3s ease
	
	background-color $amarelo
	box-shadow $branco 0 0 10px
	
.lamp__top-light
	position absolute
	background: linear-gradient(135deg, rgba(255,198,93,1) 0%,rgba(255,198,93,0.97) 2%,rgba(255,198,93,0.27) 53%,rgba(255,252,247,0) 59%,rgba(255,255,255,0) 74%);
	width 540px
	height 353px
	bottom 0
	left 150px
	z-index 902
	opacity .4
	transition opacity .3s ease,visibility .3s ease
	pointer-events none
	
.lamp__top-btn
	position absolute
	height 25px
	width 12px
	background-color $vermelho-escuro-luminaria
	z-index 903
	transform rotateZ(-45deg)
	bottom 357px
	left 126px
	
.lamp--off
	.lamp__top-lamp
		background-color rgba($preto, 0.4)
		
	.lamp__top-light
		opacity 0
		visibility hidden
		
	.lamp__top-btn
		bottom 363px
		left 120px
	
.lamp--clickable
	cursor pointer
	
.lamp--ignore
	pointer-events none