.camera
	position absolute
	right 15px
	bottom 10px
	
	&:hover
		.camera__shutter::before
			animation shutter-toggle .45s ease-in-out
			
		.camera__flash
			animation flash-toggle .45s ease-in-out
	
.camera__container
	position relative
	height 55px
	width 90px
	background-color lighten($preto, 20%)
	border-radius 8px
	
	&::before
		content ''
		display block
		position absolute
		height 30px
		width 100%
		bottom 8px
		background-color lighten($azul, 30%)
	
.camera__shutter
	position absolute
	width 36px
	height 36px
	border-radius 50%
	background-color lighten($cinza, 30%)
	border 3px solid lighten($preto, 20%)
	translate-horizontal-center()
	bottom 5px
	
	&::before
		content ''
		display block
		position absolute
		width 24px
		height 24px
		translate-center()
		border-radius 50%
		background-color lighten($cinza, 50%)
		border 5px solid lighten($cinza, 10%)

.camera__flash
	position absolute
	right 5px
	top 3px
	width 15px
	height 10px
	background-color $branco
	border 1px solid lighten($azul, 70%)
	border-radius 3px
	
.camera__btns
	position absolute
	top 0
	width 100%
	height 3px
	top -3px
	
	&::before
	&::after
		content ''
		display block
		position absolute
		height 100%
		border-radius 4px 4px 0 0 
		
	&::before
		width 25px
		left 8px
		background-color lighten($preto, 10%)
		
	&::after
		width 15px
		right 6px
		background-color lighten($preto, 40%)
		
.camera__eyepiece
	position absolute
	top 5px
	left 10px
	width 6px
	height 6px
	background-color $branco
	border 2px solid lighten($preto, 40%)
	border-radius 50%