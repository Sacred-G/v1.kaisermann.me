.easteregg__inception-frame
.speaker-song-frame
	background-color $preto
	position absolute
	top 0
	left 0
	
.speaker-song-frame
	size(100%)
	
.easteregg__inception-frame
	width 1280px
	height 800px
	transform-origin 0 0
	
.inception-spinning-top
	bottom 0
	left 10px
	z-index 1000
	cursor pointer
	position absolute
	size(40px, 49px)
	transform rotateZ(-37deg)
	bottom -5px
	transition transform .3s ease, bottom .3s ease
	
	&:hover
		transform rotateZ(0deg)
		bottom 0
		animation jump-spinning-top .5s ease
	
	&::before
	&::after
		content ''
		display block
		width 0
		height 0
		border-style solid
		margin 0 auto		
	
	&::before
		border-width 0 5px 30px 5px
		border-color transparent transparent lighten($cinza,60%) transparent
		
	&::after
		border-width 15px 13px 0 13px
		border-color lighten($cinza,50%) transparent transparent transparent
		margin-top 4px

	
.spinning-top__base
	border-radius 50%
	position absolute
	background-color lighten($cinza,30%)
	size(40px, 8px)
	
	&::before
		content ''
		display none
		width 3px
		height 2px
		background-color $branco
		position absolute
		border-radius 50%
		top 2px
		left 2px
		
.spinning_top--spinning
	transform rotateZ(0deg)
	bottom 0
	animation translate-spinning-top .5s ease infinite
	
	.spinning-top__base::before
		display block
		animation rotate-spinning-top 1s ease infinite
		
.easteregg__batpug
	size(300px,234px)
	background-image url(../img/batpug.gif)
	background-repeat no-repeat
	background-size contain
	background-position center
	position absolute
	top -100%
	display none
	
.easteregg__batpug--active
	display block
	animation bat-pug 2s linear	
	
@media(max-width:991px)
	.easteregg__inception-frame
		display none
	
	.notepad
		display block !important
		
@keyframes bat-pug {
	0% { right: 0; top: 10px; width: 0; height: 0; }
	40% { right: 33%; top: 440px; width: 300px; height: 234px; }
	60% { right: 40%; top: 440px; }
	100% { right: 100%; top: 150px; width: 100px; height: 34px; }
}
		
@keyframes jump-spinning-top {
	0% { bottom: 0; }
	50% { bottom: 5px; }
	100% { bottom: 0; }
}

@keyframes translate-spinning-top {
	0% { transform:translateX(0); }
	50% { transform:translateX(-1px); }
	100% { transform:translateX(1px); }
}
@keyframes rotate-spinning-top {
	0% {top: 3px; left: 2px; width:0; height:0; }
	50% { width: 3px; height:4px; top: 2px; }
	100% { width: 0; height:0; top: 3px; left:34px; }
}