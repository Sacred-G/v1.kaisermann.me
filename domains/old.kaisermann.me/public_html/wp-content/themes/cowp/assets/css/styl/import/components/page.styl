.content-light 
	background-color rgba($cinza-3, 0.2)
	padding 15px

.content-wrapper
	&.page
		margin 0 10%
		padding 110px 45px 45px
		background-color $cinza-bg

		@media(max-width: 480px)
			padding 55px 15px 15px
			margin 0 4%

	article
		img
			-webkit-filter: grayscale(100%);
			filter: grayscale(100%);
			filter: gray;
			filter: url("data:image/svg+xml;utf8,<svg version='1.1' xmlns='http://www.w3.org/2000/svg' height='0'><filter id='greyscale'><feColorMatrix type='matrix' values='0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0' /></filter></svg>#greyscale");


		&::after
			content '' 
			display block
			clear both

		p
			line-height 140%
			+ p
				margin-top 15px

			a
				color $azul-0
				transition color .3s ease
				&:hover
					color $azul


// Sobre
.page
	color #fff
	header
		.title
			margin-bottom 15px
			a
				opacity .5
				color #fff
				text-transform uppercase
				transition opacity .3s ease

				&:hover
					opacity .9 

	&.sobre			
		.about
			color whitesmoke
			width 65%
			vertical-align middle

		.me-myself-and-i
			vertical-align top
			width 35%
			figure
				margin-right 5%
				opacity 0.8
				transition opacity .3s ease
				&:hover
					opacity 1

			@media(max-width: 767px)
				margin-bottom 25px
				figure
					margin-right 0
					img
						margin 0 auto

		.about
		.me-myself-and-i
			display table-cell
			@media(max-width: 767px)
				display block
				width 100%
				margin-left auto
				margin-right auto

		.mid
			margin-top 60px

.card-timeline
	+ .card-timeline
		margin-top 30px

	.title
		display inline-block
		font-size 22px
		margin-bottom 10px

	.periodo
		color $azul-0;
		display inline-block
		margin-left 10px

	.job-item
		margin-left 20px
		+.job-item
			margin-top 20px;


.mid.content-light
	h3
		margin-bottom 10px

	ul
		line-height 140%
		margin-left 1.2em

	li
		padding 5px 0

	@media(max-width: 480px)
		h3
			font-size 22px
		.card-timeline
			.title
				font-size 18px
			
			
	 
	.card-portfolio-list
		span
			font-family 'Josefin Sans'
			text-transform uppercase
			font-size 32px
			margin-left 15px

		ul
			margin-left 0

		li
			list-style none
			display inline-block
			margin 15px

		a 
			display inline-block
			background-color $azul
			padding 15px
			color #fff
			transition all .3s ease

			&:hover
				background-color $azul-2

			&:active
				transform scale(0.95)

		+ .card-portfolio-list
			margin-top 15px
			


form
	.form-group
		div 
			position relative
		
			+ div
				margin-top 30px

	input
	textarea
		font-family 'Oxygen'
		font-size 18px
		padding 10px
		color $cinza-2
		letter-spacing 2px
		text-transform uppercase
		width 100%
		resize none
		border none

	input
		height 42px

		&[type=submit]
			background-color $azul
			color #fff
			cursor pointer
			transition all .3s ease
			border-bottom 0 solid $azul-2
			
			&:hover
				border-bottom-width 5px

			&:active
				transform scale(0.99)

	div
	span
		&[role=alert]
			background-color $cinza-3
			color #fff
			padding 13px
			height 42px

	div
		&[role=alert]
			min-height 42px
			height auto
			width 100%	
			border none
			margin 0

.ajax-loader
	position absolute
	right 20px
	top 50%
	margin-top -8px

.wpcf7-response-output[role=alert]
	margin-top 30px