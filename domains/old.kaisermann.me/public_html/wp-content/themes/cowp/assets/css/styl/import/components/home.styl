.card
	&.projeto
		display block
		position relative
		max-width 600px
		width 50%
		float left
		overflow hidden
		cursor pointer
		transition transform .4s ease

		@media(max-width: 600px)
			width 100%

		.desc
			width 10%
			height 10%
			display block
			margin auto
			position absolute
			top 0 
			left 0
			bottom 0
			right 0
			text-align center
			background-color #5d5d5d
			transition all .4s ease, width .3s ease .2s, height .3s ease .2s
			overflow hidden
			transform rotate(45deg)
			perspective 1000
			backface-visibility hidden

			> div 
				display table
				width 100%
				text-align center
				height 100%
				opacity 0

				> div
					display table-cell
					vertical-align middle
					
			.title
				display block
				font-family "Josefin Sans";
				color #fff
				padding 15px
				font-weight 400
				text-align center
				font-size 32px
				text-transform uppercase
				word-break break-all
				letter-spacing 4px
				opacity 0
				transition all .3s ease .5s
				line-height 140%

				@media(max-width: 700px)
					font-size 20px

				@media(min-width: 991px)
					font-size 32px

				@media(min-width: 1100px)
					font-size 40px

				@media(min-width: 1300px)
					font-size 50px


		.overlay
			position absolute
			width 100%
			height 0
			padding-bottom 100%
			overflow hidden
			transform translateZ(0)
			perspective 1000
			backface-visibility hidden

			&::before
			&::after
				content ""
				display block
				position absolute
				opacity 0.6
				top 0
				left 0
				width 0
				height 0
				transition all .6s ease

			&::before
				border-right 600px solid transparent
				border-bottom 600px solid #979797
			&::after
				border-left 600px solid transparent
				border-top 600px solid $azul

		&:hover
			.desc
				width 100%
				height 50% 
				transform rotate(0deg)

				.title
				div
					opacity 1

			.overlay
				&::after
					left 100%

				&::before 
					left -100%